{
    "name": "giacocorsiglia/awful",
    "description": "A framework that makes WordPress development more awful.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Giaco Corsiglia",
            "email": "GiacoCorsiglia@gmail.com",
            "homepage": "https://giacocorsiglia.com"
        }
    ],
    "support": {
        "issues": "https://github.com/GiacoCorsiglia/awful/issues",
        "source": "https://github.com/GiacoCorsiglia/awful"
    },
    "keywords": [
        "wordpress"
    ],
    "provide": {
        "psr/container-implementation": "^1.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Awful\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "require": {
        "php": ">=7.1",
        "nikic/fast-route": "^1.2",
        "psr/container": "^1.0",
        "twig/twig": "^2.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "giacocorsiglia/wordpress-stubs": "^4.9",
        "johnpbloch/wordpress": "^4.9",
        "phpunit/phpunit": "5.*",
        "psy/psysh": "^0.8.17",
        "vimeo/psalm": "^1.0",
        "wp-phpunit/wp-phpunit": "^4.9"
    },
    "config": {
        "sort-packages": true
    }
}
